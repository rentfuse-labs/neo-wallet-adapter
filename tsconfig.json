{
	"compilerOptions": {
		"noEmit": true,
		"declaration": true,
		"sourceMap": true,
		"noEmitOnError": true,
		"stripInternal": true,
		"target": "es6",
		"module": "esnext",
		"moduleResolution": "node",
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"typeRoots": ["packages/@types", "node_modules/@types"]
	},
	"include": ["packages/*/*/src"],
	"exclude": ["node_modules", "packages/*/*/node_modules"]
}
